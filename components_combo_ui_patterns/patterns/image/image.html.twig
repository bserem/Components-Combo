<dl class="image">
  {% if title|render %}
    <dt class="image__title">
      {{ title }}
    </dt>
  {% endif %}
  {% if image|render %}
    <dt class="image__image">
      {{ image }}
    </dt>
  {% endif %}
  {% if caption|render %}
    <dd class="image__caption">
      {{ caption }}
    </dd>
  {% endif %}
  {% if credit|render %}
    <dd class="image__credit">
      {{ credit }}
    </dd>
  {% endif %}
  {% if license|render %}
    <dd class="image__license">
      {{ license }}
    </dd>
  {% endif %}
</dl>
